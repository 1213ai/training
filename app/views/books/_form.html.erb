<div class ="book-new">
   <h2 class="mt-3 my-3">New book</h2>
    <%= form_with model: book,url:'/books', local: true do |f| %>
     <h7>Title</h7>
       <div class="form-group mt-2" >
          <%= f.text_field :title, class: 'form-control' %>
       </div>
     <h7>Opinion</h7>
        <div class="form-group mt-2" >
          <%= f.text_area :body, class: 'form-control' %>
        </div>




   <div class="star-form-group" id="star1">
    <%= f.label :rate,'rate', class:'star-title' %>
  <script>
  $('#star1').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    scoreName: 'book[rate]',
    half: true,
  });
  </script>
  </div>

    <div class="star-form-group" id="star2">
    <%= f.label :impressed,'rate', class:'star-title' %>
  <script>
  $('#star2').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    scoreName: 'book[impressed]',
    half: true,
  });
  </script>
  </div>


     <div><%= f.submit 'Create Book', class:"btn btn-success" %></div>
    <% end %>
</div>